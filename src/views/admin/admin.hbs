<div class="row">


<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Buscar proyecto</h3>
    </div>
    <div class="card-body">
      <form action="/adminXa" method="POST">
        
        <div class="form-group">
          <input type="text" name="idP" class="form-control" placeholder="ID proyecto" autofocus/>
        </div>
       
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Consultar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>


<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
        <h3>Datos del proyecto</h3>
    </div>
    <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ project.title }} 
        </h4>
        <p>{{ project.description }}</p>
        <h5 class="card-title d-flex justify-content-between align-items-center"> 
            Medidas :
        </h5>
        <p>Ancho :{{ project.ancho }} CM </p>
        <p>Alto :{{ project.alto }} CM </p>
        <p>Fondo :{{ project.fondo }} CM </p>
    </div>
  </div>
</div>


<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Enviar Precios</h3>
    </div>
    <div class="card-body">
      <form action="/adminXa/precios/{{project._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
         
        
        <div class="form-group">
          <input type="number" name="diseño" class="form-control" placeholder="Precio Diseño" value="{{project.precio.diseño}}"/>
        </div>
        <div class="form-group">
          <input type="number" name="fabricacion" class="form-control" placeholder="Precio Fabricacion" value="{{project.precio.fabricacion}}"/>
        </div>
        <div class="form-group">
          <input type="number" name="envio" class="form-control" placeholder="Precio Envio" value="{{project.precio.envio}}"/>
        </div>
        <div class="form-group">
          <input type="number" name="instalacion" class="form-control" placeholder="Precio Instalacion" value="{{project.precio.instalacion}}"/>
        </div>
        
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>


</div>
