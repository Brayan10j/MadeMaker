<div class="row">
  {{#each projects}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }} <a href="/projects/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ description }}</p>
        <!-- DELETE REQUEST -->
        <form action="/projects/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
        </form>
        <br>
        <button onclick="window.location.href = '/projects/project/{{_id}}';" class="btn btn-primary btn-block btn-sm"> Enviar Proyecto </button>
        <br>
        <button onclick="window.location.href = '/projects/planes/{{_id}}';" class="btn btn-success btn-block btn-sm"> Escojer plan </button>
        <br>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hola! {{user.name}}</h1>
      <p clsss="lead">Aun no haz creado un proyecto.</p>
      <a href="/projects/add" class="btn btn-success btn-block">Crear un proyecto</a>
    </div>
  </div>
  {{/each}}
</div>
